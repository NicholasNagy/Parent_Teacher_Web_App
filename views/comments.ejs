<div class="page_content">

                  
                <form action="/reply" method="POST">
                    <div class="linkedPost">

                       <span class="postAuthor"><em class="material-icons" style="float:left;font-size:27px;padding-right: 2px; padding-top:3px ">account_circle</em>Poster_Name</span>
                    <div class="postContent">

                    
                        <input type="text"name = "postContent" style="display:none" value = "<%= post%>">
                        <input type="text" name = "postID" style="display:none" value = "<%= postID%>"> 

                        <span class="Text"><%= post %></span>

                    </div>
                </div>

                <div name="replyBox" id="replyBox">

                

                    <textarea id="replayArea" name="replayArea"  rows="4" cols="120"  placeholder="Post a reply."></textarea>


                    
                    <button name="submitComment" id="submitComment">Reply</button>

                </form>


                </div>




   <p id="commentTitle">Comments</p>


                <table class="commentsTable">

        <% if(typeof comments !== 'undefined'){ %>
       <% comments.forEach(function(u){ %> 
                    <tr class="posts">

                        <td><span class="postAuthor"><em class="material-icons" style="float:left;font-size:20px;padding-right: 2px; padding-top:3px ">account_circle</em>Poster_Name</span>
                    <div class="commentContent">

                        <!--COmment Content here-->

                        <span class="commentText"><%= u.Content %></span>

                    </div>
                       </tr>
      <% }) %> 
      <% } %>

            </table>

